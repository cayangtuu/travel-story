<section>
  <div class="d-flex justify-content-center">
    <div class="row w-75">
      <div class="col-md-4">
        <img src="{{user.avatar}}" class="d-block mx-auto border border-2 rounded-circle"
          style="height: 150px; width: 150px; background-color:rgb(131, 135, 139);">
      </div>
      <div class="col-md-6">
        <p class="h4 fw-bolder">{{user.name}}</p>
        <p style="white-space:pre-wrap;">{{user.introduction}}</p>
        {{#ifCond the_user.id user.id}}
        <a href="/users/profile/{{ ../user.id }}/edit" class="btn btn-primary w-100 mt-3">編輯個人資料</a>
        {{/ifCond}}
      </div>
    </div>
  </div>
  <div class="d-flex justify-content-center mt-4">
    <div class="row w-50">
      <h5 class="col-md-4"><i class="fa-solid fa-sheet-plastic fs-5"></i> 10
        <p>貼文數</p>
      </h5>
      <h5 class="col-md-4"><i class="fa-solid fa-heart fs-5"></i></i> 10
        <p>按讚數</p>
      </h5>
      <h5 class="col-md-4"><i class="fa-solid fa-bookmark fs-5"></i> 10
        <p>收藏數</p>
      </h5>
    </div>
  </div>
  <hr>
  <div class="mt-5 row">
    {{#each travels}}
    <div class="card col-md-3 py-1 text-center">
      <a href="/travels/{{this.id}}">
        <img class="card-img-top bg-white center" style="height: 250px; width:250px" src=" {{this.Images}}" alt="旅行圖片">
      </a>
      <div class="card-body p-0">
        <div class="card-text position-relative">
          <h5 class="card-title text-primary">{{this.name}}</h5>
          <p class="mx-2 mb-0 text-wrap" style="color:rgb(148, 148, 148)">{{formatDate this.beginDate}} ~ {{formatDate
            this.finishDate}}</p>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</section>