{{>travel-tabs route=route}}
<section id="introSection" class="py-5">
  <div class="container">
    <div class="row justify-content-center">
      {{#each travels}}
      <div class="card col-md-4 mb-2 py-3" style="max-width:300px">
        <a href="/travels/{{this.id}}">
          <img class="card-img-top bg-white" style="height: 300px; width:100%;" src=" {{this.Images}}" alt="旅行圖片">
        </a>
        <div class="card-body">
          <div class="card-text position-relative">
            <a href="/travels/{{this.id}}" style="text-decoration:none;">
              <h4 class="card-title text-primary">{{this.name}}</h4>
            </a>
            <span class="position-absolute top-0 end-0 badge rounded-pill bg-info fs-6">{{this.score}}</span>
            <br>
            <div class="d-flex">
              <i class="fa-solid fa-plane-departure"></i>
              <p class="mx-2 fs-5 text-wrap">{{this.location}}</p>
            </div>
            <div class="d-flex">
              <i class="fa-regular fa-calendar-days fs-5"></i>
              <p class="mx-2 fs-5 mb-0 text-wrap">{{formatDate this.beginDate}} ~ {{formatDate this.finishDate}}</p>
            </div>
          </div>
        </div>
        <div class="d-flex justify-content-center">
          {{#if this.isLiked}}
          <form action="/travels/{{this.id}}/unlike" method="POST">
            <button class="btn m-1"><i class="fa-solid fa-heart fs-5 text-danger"></i></button>
          </form>
          {{else}}
          <form action="/travels/{{this.id}}/like" method="POST">
            <button class="btn m-1"><i class="fa-regular fa-heart fs-5 text-danger"></i></button>
          </form>
          {{/if}}
          {{#if this.isCollected}}
          <form action="/travels/{{this.id}}/uncollected" method="POST">
            <button class="btn m-1"><i class="fa-solid fa-bookmark fs-5"></i></button>
          </form>
          {{else}}
          <form action="/travels/{{this.id}}/collected" method="POST">
            <button class="btn m-1"><i class="fa-regular fa-bookmark fs-5"></i></button>
          </form>
          {{/if}}
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</section>